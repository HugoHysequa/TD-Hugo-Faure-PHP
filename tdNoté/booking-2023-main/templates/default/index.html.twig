{% extends 'base.html.twig' %}

{% block body %}

	<h2>Bienvenue!</h2>

	<div class="card mb-4">
		<div class="card-header">
			La salle de {% for config in configuration %}<b>{{ config.nomSalle }}</b>{% endfor %} est dotée de
			<b>{{ places.lignes *  places.seatPerRows }}</b> places et vous permettra de réserver vos spectacles en ligne!
			<hr/>
			<a href="{{ path('app_show_index') }}" class="btn btn-primary float-end">
				Découvrir les spectacles &raquo;
			</a>
		</div>
	</div>

	<h2>Nos coordonnées</h2>

	<div class="card">
		<div class="card-header">
			Retrouvez notre salle de spectacle:

			<hr/>

			<iframe src="{% for config in configuration %}{{ config.emplacement }}{% endfor %}" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

			<hr/>

			<code>{% for config in configuration %}{{ config.adresse }}{% endfor %}
			</code>
		</div>
	</div>

{% endblock %}
